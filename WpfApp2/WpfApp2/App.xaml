<Application x:Class="WpfApp2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="WhiteRoseGradientBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="MistyRose" Offset="0" />
                    <GradientStop Color="White" Offset="0.5" />
                    <GradientStop Color="MistyRose" Offset="1" />
                </LinearGradientBrush>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource WhiteRoseGradientBrush}" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </Application.Resources>
</Application>
